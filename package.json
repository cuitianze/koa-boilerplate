{
  "name": "koa-boilerplate",
  "version": "0.5.0",
  "repository": "drGrove/koa-boilerplate",
  "engines": {
    "node": ">=4.0"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/drGrove/koa-boilerplate/issues"
  },
  "dependencies": {
    "bcryptjs": "^2.2.1",
    "gulp-mocha": "^2.1.3",
    "jsonwebtoken": "^5.0.5",
    "koa": "^0.21.0",
    "koa-bodyparser": "^2.0.0",
    "koa-compose": "^2.3.0",
    "koa-cors": "0.0.16",
    "koa-error": "^1.1.3",
    "koa-morgan": "^0.3.0",
    "koa-request": "^1.0.0",
    "koa-response-time": "^1.0.2",
    "koa-router": "^5.1.2",
    "koa-sequelize-transaction": "0.0.1",
    "koa-trace": "^1.0.0",
    "mongoose": "^4.1.3",
    "mysql": "^2.9.0",
    "path": "^0.11.14",
    "querystring": "^0.2.0",
    "sequelize": "^3.5.1",
    "swagger-jsdoc": "^1.2.1",
    "swagger-koa": "^1.0.8",
    "swagger-ui": "^2.1.2",
    "winston": "^1.1.1"
  },
  "devDependencies": {
    "assert": "^1.3.0",
    "co": "^4.6.0",
    "co-supertest": "0.0.10",
    "expect": "^1.9.0",
    "gulp": "^3.9.0",
    "gulp-jscs": "^2.0.0",
    "gulp-jscs-stylish": "^1.2.1",
    "gulp-jshint": "^2.0.0",
    "gulp-mocha-co": "^0.4.1-co.3",
    "isparta": "^4.0.0",
    "jshint": "^2.8.0",
    "minimist": "^1.2.0",
    "mocha": "^2.3.4",
    "mocha-steps": "0.0.1",
    "node-env-file": "^0.1.7",
    "nodemon": "^1.7.1",
    "sequelize-cli": "^1.9.1",
    "should": "^7.1.0",
    "supertest": "^1.1.0",
    "eslint": "^2.1.0",
    "eslint-config-google": "^0.4.0",
    "gulp-eslint": "^2.0.0",
    "wrench": "^1.5.8"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "mocha": true
    },
    "extends": "google",
    "rules": {
      "object-curly-spacing": "off",
      "comma-style": "off",
      "camelcase": "off",
      "generator-star-spacing": "off",
      "array-bracket-spacing": "off",
      "no-spaced-func": "off",
      "space-in-parens": "off",
      "no-unexpected-multiline": "off"
    }
  },
  "scripts": {
    "start": "NODE_ENV=PRODUCTION APP_HOST=0.0.0.0 APP_PORT=8886 node index.js",
    "postinstall": "bower install -y --config.cwd=public/swagger",
    "start-debug": "NODE_ENV=DEVELOPMENT DEBUG=koa* ./node_modules/nodemon/bin/nodemon.js --debug index.js",
    "start-debug-brk": "NODE_ENV=DEVELOPMENT DEBUG=koa* APP_HOST=0.0.0.0 APP_PORT=8886 ./node_modules/nodemon/bin/nodemon.js --debug-brk index.js",
    "validate": "gulp lint",
    "unit": "PROJECT_ROOT=$PWD gulp unit",
    "test": "npm run seed-migrate && npm run unit && npm run smokeTest",
    "seed": "npm run sequelize db:seed",
    "migrate": "npm run sequelize db:migrate",
    "seed-migrate": "npm run seed && npm run migrate",
    "smokeTest": "PROJECT_ROOT=$PWD gulp smokeTest",
    "sequelize": "./node_modules/.bin/sequelize"
  }
}
